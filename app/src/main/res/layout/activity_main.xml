<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="90dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#FFFFFF">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

        <LinearLayout android:id="@+id/main_panel" android:layout_width="match_parent"
            android:layout_height="10dp" android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <ImageView
                android:layout_height="342dp"
                android:layout_width="271dp"
                android:src="@drawable/logo" />

            <Button android:id="@+id/login_button" style="@style/CodeFont"
                android:layout_width="150dp" android:layout_height="40dp"
                android:layout_marginTop="16dp" android:text="@string/login"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="@drawable/button_text_color"
                />

            <Button android:id="@+id/found_button" style="@style/CodeFont"
                android:layout_width="150dp" android:layout_height="40dp"
                android:layout_marginTop="16dp" android:text="@string/register"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="@drawable/button_text_color"/>

            <Button android:id="@+id/register_button" style="@style/CodeFont"
                android:layout_width="150dp" android:layout_height="40dp"
                android:layout_marginTop="16dp" android:text="@string/found"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:textColor="@drawable/button_text_color"/>

        </LinearLayout>


</LinearLayout>



